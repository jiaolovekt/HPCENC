#%Module1.0

#TODO: autodetect ENCROOT in module
if { [ module-info mode load ] } {
	set __encroot "$::env(ENCROOT)"
	if { "${__encroot}" == "" } {
		puts stderr "no ENCROOT defined, please export ENCROOT to hpcenc root"
		break
	}
	puts stderr "ENCROOT at ${__encroot}"
}


append-path LD_LIBRARY_PATH ${__encroot}/deps/common_lib
prepend-path PATH ${__encroot}/deps/common_bin
